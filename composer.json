{
    "name": "kduma-autoid/php-sdm",
    "description": "PHP library for NTAG 424 DNA SDM (Secure Dynamic Messaging) implementation",
    "keywords": [
        "ntag",
        "nfc",
        "sdm",
        "ntag424",
        "secure-dynamic-messaging",
        "aes128",
        "cmac",
        "authentication"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Krystian Duma",
            "email": "kduma@users.noreply.github.com"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^2.0",
        "squizlabs/php_codesniffer": "^3.10"
    },
    "autoload": {
        "psr-4": {
            "KDuma\\SDM\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KDuma\\SDM\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse src tests --level=max",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
