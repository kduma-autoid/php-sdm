{
    "name": "kduma/php-sdm",
    "description": "PHP implementation for NTAG DNA 424 Secure Dynamic Messaging (SDM)",
    "type": "library",
    "keywords": [
        "ntag",
        "nfc",
        "sdm",
        "secure-dynamic-messaging",
        "ntag-dna",
        "ntag-424"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Krystian Duma"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10",
        "friendsofphp/php-cs-fixer": "^3.48"
    },
    "autoload": {
        "psr-4": {
            "KDuma\\SDM\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "KDuma\\SDM\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse",
        "cs-fix": "php-cs-fixer fix",
        "cs-check": "php-cs-fixer fix --dry-run --diff"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
